# Group Examples
vaccines %>% group_by(clinic) %>%
  drop_na() %>%
  summarize(mean_patients==mean(patients_per_day))
  
vaccines %>% group_by(clinic) %>%
  drop_na() %>%
  summarize(max_patients==max(patients_per_day))

## Filter Example
vaccines %>% 
  filter(clinic=="McAllen")
  
## Add Column Example
vaccines %>% 
  mutate(total_vaccines==clinics*2)
